<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_margin="24dp">

            <TextView
                android:id="@+id/title_modal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Obrigado por doar no Obes"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="27sp"/>

            <TextView
                android:id="@+id/text_modal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="Você receberá um e-mail quando alguém solicitar a doação. Atente-se ao seu telefone e realize a entrega com responsabilidade!"
                android:textColor="@color/black"
                android:textSize="14sp"/>

            <TextView
                android:id="@+id/button_modal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:text="Visualizar no meu perfil"
                android:textColor="@color/teal_200"
                android:textSize="14sp"
                android:textStyle="bold"
                android:padding="10dp"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>